{
  "expo": {
    "name": "SureCape Driver",
    "slug": "surecape-driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/surecape_icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/surecape_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#008080"
    },
    "primaryColor": "#008080",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SureCape Driver needs your location to track trips, provide accurate ETAs to customers, and optimize driver dispatch.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.surecape.driver",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SureCape Driver needs your location to track trips, provide accurate ETAs to customers, and optimize driver dispatch.",
        "NSLocationWhenInUseUsageDescription": "SureCape Driver needs your location to track trips and provide accurate ETAs to customers.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/surecape_icon.png",
        "backgroundColor": "#008080"
      },
      "package": "com.surecape.driver",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.ico"
    },
    "extra": {
      "eas": {
        "projectId": "surecape-driver-app"
      }
    }
  }
}
